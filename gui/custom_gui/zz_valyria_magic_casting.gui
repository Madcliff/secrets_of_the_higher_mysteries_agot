	type magic_casting_window_open = window {
		name = "magic_casting_window_open"
		allow_outside = yes
		layer = windows_layer
		movable = yes
		parentanchor = top|right
		alwaystransparent = yes
		size = { 100% 100% }

		visible = "[And( Not( IsPauseMenuShown ), And(Or(Not(IsObserver), GetPlayer.IsValid), IsDefaultGUIMode))]"

		zz_magic_window = {}
	}

